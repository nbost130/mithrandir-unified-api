{
  "name": "mithrandir-unified-api",
  "version": "2.1.0",
  "description": "Enhanced Unified TypeScript API for Mithrandir system management with transcription project management",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "vitest",
    "test:run": "vitest run",
    "test:bun": "bun test",
    "test:coverage": "vitest run --coverage",
    "lint": "biome lint ./src ./test",
    "format": "biome format --write ./src ./test",
    "format:check": "biome format ./src ./test",
    "check": "biome check --write ./src ./test",
    "check:size": "node scripts/check-file-size.mjs",
    "prepare": "husky"
  },
  "dependencies": {
    "@fastify/cors": "^8.4.0",
    "@fastify/helmet": "^11.1.1",
    "@fastify/rate-limit": "^9.1.0",
    "@fastify/static": "^6.12.0",
    "@fastify/swagger": "^8.12.0",
    "@fastify/swagger-ui": "^2.1.0",
    "@types/opossum": "^8.1.9",
    "axios": "^1.13.2",
    "axios-retry": "^4.5.0",
    "bullmq": "^5.64.1",
    "dotenv": "^17.2.3",
    "fastify": "^4.24.3",
    "ioredis": "^5.8.2",
    "opossum": "^9.0.0",
    "pino-pretty": "^13.1.2",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.10",
    "@types/node": "^20.19.27",
    "husky": "^9.1.7",
    "tsx": "^4.6.0",
    "typescript": "^5.3.0",
    "vitest": "^4.0.16"
  },
  "keywords": [
    "mithrandir",
    "api",
    "transcription",
    "monitoring",
    "homelab"
  ],
  "author": "Mithrandir System",
  "license": "MIT"
}
